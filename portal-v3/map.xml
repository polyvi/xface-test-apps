<?xml version="1.0" encoding="utf-8"?>
<action name="index" src="view/home.html">

    <!--
    ###############################################################
        引用Model文件
    ###############################################################
    -->
    <model name="Setting" src="model/Setting.js"/>
    <model name="LocalData" src="model/LocalData.js"/>
    <model name="Page" src="model/Page.js"/>
    <model name="Classify" src="model/Classify.js"/>
    <model name="Application" src="model/Application.js"/>
    <model name="RemoteApplication" src="model/RemoteApplication.js"/>
    <model name="ApplicationManager" src="model/ApplicationManager.js"/>
    <model name="Downloader" src="model/Downloader.js"/>
    <model name="DownloadManager" src="model/DownloadManager.js"/>
    <model name="ThemeManager" src="model/ThemeManager.js"/>
    <!--
    ###############################################################
        定义会被多处引用的业务流程模板
    ###############################################################
    -->
    <actionTemp>
        <action name="downloadManager" src="view/downloadManager.html">
            <action name="shake" src="view/shake.html">
                <action name="@appDetail"/>
            </action>
        </action>
        <action name="appDetail" src="view/appDetail.html">
            <action name="@downloadManager"/>
        </action>
    </actionTemp>


    <!--
    ###############################################################
        从主页开始往下走的业务流程
    ###############################################################
    -->
    <action name="appCenter" src="view/appCenter.html">
        <action name="@appDetail"/>
        <action name="search" src="view/search.html">
            <action name="@appDetail"/>
        </action>
    </action>
    <action name="@downloadManager"/>
    <action name="setting" src="view/setting.html">
        <action name="about" src="view/about.html"/>
    </action>
</action>